<!DOCTYPE html>
<html lang="en">
<head>
  <title>WdiConf</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Raleway:100,400' rel='stylesheet' type='text/css'>
  <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>

  <nav class="default" id="navbar">
    <ul>
     <%= render 'navbar' %>

      <!-- start of login -->
      <% if logged_in? %>
      <div class="logged-in">
        <%= link_to current_user.name, user_path(current_user.id) %>
        <%= form_tag '/logout', :method => :delete do %>
          <li><button class="admin-btn">Logout <i class="fa fa-sign-out"></i></button></li>
        <% end %>
      </div>
      <% else %>
        <a href="#login" class="login-modal"><li>Login<i class="fa fa-sign-in"></i></li></a>
      <% end %>
      <!-- end of login  -->
   </ul>
 </nav>

  <div class="nav-toggle" id="nav-toggle"><i class="fa fa-bars"></i></li></div>



  <!-- Display any errors (in a popup) -->
  <% if flash[:notice] %>
    <div class="modal-background notice">
      <div class="modal">
        <div class="close-modal">X</div>
        <%= flash[:notice] %>
      </div>
    </div>
  <% end %>
  <!-- end errors section -->

  <!-- Display login popup when needed-->
  <%= render 'login' %>
  <!-- end login popup -->

 <%= yield %>

 <script>
   smoothScroll.init();
   window.sr = new scrollReveal();
 </script>
</body>
</html>