.circular {
	display: inline-block;
	width: 110px;
	height: 110px;
	border-radius: 55px;
	-webkit-border-radius: 55px;
	-moz-border-radius: 55px;
	margin: 20px 5px;
}

.circular p {
	line-height: 110px;
	margin: 0;
	color: transparent;
}

.circular:hover{
  background: rgba(0,0,0,0.8);
}

.circular:hover p {
	color: white;
}

